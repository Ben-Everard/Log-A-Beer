<div class="container">
	<div class="span5">
		<h3>Blog the Beer</h3>
		<form action="/users" method="post">
			<input type="text" name="bar[name]" placeholder="Bar Name" /><br>
			<input type="text" name="bar[city]" placeholder="City" /><br>
			<input type="text" name="beer[name]" placeholder="Beer Being Consumed" /><br>
			<input type="submit" value="Log It" />
		</form>
	</div>
	<div class="span6">
	<table id="table", class="table">
		<thead>
			<tr>
				<th>Name of Beer</th>
				<th># of Beers Drank</th>
				<th>Bar</th>
				<th>City</th>
				
			</tr>
		</thead>
		<tbody>
			<tr>
				<% @beers.each do |beer| %>
				<td><%= beer.name %></td>
				<td><%= beer.number_drank %></td>
					<% beer.bars.each do |bar| %>
					<td><%= bar.name %></td>
					<td><%= bar.city %></td>
					<% end %>
			</tr>
				<% end %>
		</tbody>
	</table>
	</div>
</div>


