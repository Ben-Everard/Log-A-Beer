<div class="container">
	<div class="span7">
	<table id="table", class="table">
		<thead>
			<tr>
				<th>Name of Beer</th>
				<th># of Beers Drank</th>
				<th>Bar</th>
				<th>City</th>
				
			</tr>
		</thead>
		<tbody>
			<tr>
				<% @beers.each do |beer| %>
				<td><%= beer.name %></td>
				<td><%= beer.number_drank %></td>
					<% beer.bars.each do |bar| %>
					<td><%= bar.name %></td>
					<td><%= bar.city %></td>
					<% end %>
			</tr>
				<% end %>
		</tbody>
	</table>
	</div>
	<div class = "span5">
		<h4 >About User</h4>
		<%= @user.about %><br>
	</div>
	<div class="span5">
		<h4 >Type of Beer You Like</h4>
		<%= @user.type_of_beer %>
	</div>
</div>
